# Copy to .env and fill in real values. Keep .env out of source control.

# OpenAI fallback (used when MCP sampling is unavailable)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# MCP server discovery
CODEX_CONFIG_PATH=C:\Users\<user>\.codex\config.toml
MCP_SERVERS_CONFIG=
MCP_SERVERS_ALLOWLIST=smart-io,keeper-memory*

# Zscaler / custom CA bundle (PEM)
NODE_EXTRA_CA_CERTS=C:\path\to\combined_certs.pem

# Server tuning
AGENT_MAX_DEPTH=3
AGENT_TEMPERATURE=0.2
AGENT_MAX_ITERATIONS=10
AGENT_MAX_TOOL_CALLS=5
AGENT_TOOL_ACCESS_LEVELS=planner=none,analysis=execute,research=read,review=read,code=execute,test=execute
MCP_TOOL_TIMEOUT_MS=60000
MCP_LIST_TOOLS_TIMEOUT_MS=30000
MCP_TOOL_RETRIES=1
MCP_TOOL_RETRY_DELAY_MS=250
AGENT_DATA_DIR=.\data

# Gremlin containment (prevents exponential agent spawning)
AGENT_MAX_TOTAL=100
AGENT_SESSION_LOG_MAX_BYTES=1000000
